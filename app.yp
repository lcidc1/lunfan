from flask import Flask, redirect
import random

app = Flask(__name__)

@app.route('/dynamic-qr')
def handle_qr_scan():
    # 随机展示
    offers = [
        'https://offer1.com',
        'https://offer2.com',
        'https://offer3.com',
        'https://offer4.com'
    ]
    
    return redirect(random.choice(offers))

if __name__ == '__main__':
    app.run(debug=True, host='0.0.0.0', port=5000)
